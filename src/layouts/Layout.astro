---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body
    class="bg-aspada-cream text-aspada-navy font-sans selection:bg-aspada-gold selection:text-aspada-steel"
  >
    <slot />
  </body>
</html>
