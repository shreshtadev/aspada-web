---
import { Image } from "astro:assets";
import FooterLogo from "../assets/Logo.png";

const { companyProfile } = Astro.props;
const currYear = new Date().getFullYear();

const links = {
  company: [
    { name: "Residential Layouts", href: "/projects/residential" },
    { name: "Commercial Projects", href: "/projects/commercial" },
    { name: "Layouts", href: "/projects/plots" },
  ],
  support: [
    { name: "Official Disclaimer", href: "/disclaimer" },
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Terms & Conditions", href: "/terms" },
    { name: "Contact Us", href: "/contactus" },
  ],
};
---

<footer class="bg-aspada-navy text-white px-6">
  <div class="mx-auto max-w-7xl pt-24 pb-14">
    <!-- Main grid -->
    <div class="grid gap-14 md:grid-cols-12">
      <!-- Brand -->
      <div class="md:col-span-4">
        <Image
          src={FooterLogo}
          alt="Aspada Developers"
          class="mb-8 w-36 brightness-0 invert"
        />

        <p class="max-w-md text-sm leading-relaxed text-white/55">
          Aspada Developers is a premier real estate firm in Shivamogga,
          committed to architectural excellence and legal transparency.
          Transforming dreams into addresses since 2010.
        </p>

        <div class="mt-8 flex items-center gap-4">
          {
            ["facebook", "instagram", "youtube"].map((social) => (
              <a
                href={
                  social === "facebook"
                    ? companyProfile.companyFacebook
                    : social === "instagram"
                      ? companyProfile.companyInsta
                      : companyProfile.companyYoutube
                }
                aria-label={social}
                class="inline-flex h-10 w-10 items-center justify-center
                     rounded-full border border-white/10
                     text-white/60 transition-colors
                     hover:bg-aspada-gold hover:text-aspada-navy"
              >
                <div class={`i-lucide-${social} text-lg`} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation -->
      <div class="md:col-span-5 md:grid md:grid-cols-2 md:gap-10">
        <div>
          <h4
            class="mb-6 text-xs font-semibold uppercase
                   tracking-[0.28em] text-aspada-gold"
          >
            Our Projects
          </h4>
          <ul class="space-y-3 text-sm text-white/65">
            {
              links.company.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="transition-colors hover:text-white"
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h4
            class="mb-6 text-xs font-semibold uppercase
                   tracking-[0.28em] text-aspada-gold"
          >
            Useful Links
          </h4>
          <ul class="space-y-3 text-sm text-white/65">
            {
              links.support.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="transition-colors hover:text-white"
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Office -->
      <div class="md:col-span-3">
        <h4
          class="mb-6 text-xs font-semibold uppercase
                 tracking-[0.28em] text-aspada-gold"
        >
          Registered Office
        </h4>

        <div class="space-y-6 text-sm text-white/65">
          <div class="flex gap-4">
            <div class="i-lucide-map-pin text-xl text-aspada-gold shrink-0">
            </div>
            <p class="leading-relaxed">
              {companyProfile.addressLine1}<br />
              {companyProfile.city}, {companyProfile.state} &hyphen; {
                companyProfile.pincode
              }
            </p>
          </div>

          <div class="flex items-center gap-4">
            <div class="i-lucide-phone text-xl text-aspada-gold"></div>
            <a
              href={`tel:+91${companyProfile.companyMainPhone}`}
              class="hover:text-white"
            >
              +91 {companyProfile.companyMainPhone}
            </a>
          </div>

          <div class="flex items-center gap-4">
            <div class="i-lucide-mail text-xl text-aspada-gold"></div>
            <a
              href={`mailto:${companyProfile.companyMainEmail}`}
              class="hover:text-white"
            >
              {companyProfile.companyMainEmail}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="my-12 h-px bg-white/5"></div>

    <!-- Bottom bar -->
    <div
      class="flex flex-col items-center justify-between
             gap-6 md:flex-row"
    >
      <p
        class="text-[10px] font-semibold uppercase
               tracking-[0.2em] text-white/40"
      >
        Â© {currYear} Aspada Developers. All rights reserved.
      </p>

      <p
        class="text-[10px] font-semibold uppercase
               tracking-[0.2em] text-white/40"
      >
        Handcrafted by{" "}
        <a
          href="https://shreshtasmg.in"
          target="_blank"
          class="text-aspada-gold hover:underline underline-offset-4"
        >
          Shreshta SMG
        </a>
      </p>

      <button
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
        class="group flex items-center gap-2
               text-[10px] font-semibold uppercase
               tracking-[0.2em] text-white/40
               transition-colors hover:text-aspada-gold"
      >
        Back to top
        <div
          class="i-lucide-arrow-up text-sm
                 transition-transform group-hover:-translate-y-0.5"
        >
        </div>
      </button>
    </div>
  </div>
</footer>
