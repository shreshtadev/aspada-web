---
import { Image } from 'astro:assets'
import logo from '../assets/Logo.png'
import pb from '../lib/pb'
const isAuthenticated = pb.authStore.isValid
const { companyProfile } = Astro.props
---

<nav id="main-navbar" class="fixed top-0 left-0 w-full z-100 transition-all duration-300">
  <div
    id="navbar-container"
    class="bg-aspada-navy/20 backdrop-blur-sm border-b border-white/5 px-6 py-0 md:h-20 flex justify-between items-center transition-all duration-300"
  >
    <a href="/" class="flex h-full items-start gap-4 group relative">
      <!-- Logo Shield Wrapper - pinned to the absolute top edge -->
      <div class="w-24">
        <div
          id="logo-shield"
          class="absolute top-0 left-0 bg-white/95 backdrop-blur-md rounded-b-[2rem] shadow-[0_20px_50px_rgba(22,42,71,0.15)] group-hover:shadow-[0_25px_60px_rgba(22,42,71,0.25)] transition-all duration-500 z-50 border-x border-b border-white/20 p-1"
        >
          <div
            class="bg-aspada-navy rounded-b-[1.75rem] overflow-hidden p-3 transition-transform duration-500 group-hover:scale-105"
          >
            <Image class="w-16 h-20 object-contain" src={logo} alt="Aspada Developers" />
          </div>
        </div>
      </div>
    </a>

    <!-- Desktop Navigation -->
    <div id="nav-links" class="hidden md:flex gap-1 items-center transition-all duration-300">
      <a
        href="/"
        class="nav-link px-5 py-6 text-[11px] font-semibold uppercase tracking-wider text-white hover:text-aspada-gold hover:bg-transparent transition-all duration-200"
      >
        Home
      </a>
      <a
        href="/projects/plots"
        class="nav-link px-5 py-6 text-[11px] font-semibold uppercase tracking-wider text-white hover:text-aspada-gold transition-all duration-200"
      >
        Layouts
      </a>
      <a
        href="/projects/residential"
        class="nav-link px-5 py-6 text-[11px] font-semibold uppercase tracking-wider text-white hover:text-aspada-gold transition-all duration-200"
      >
        Residential
      </a>

      <a
        href="/projects/commercial"
        class="nav-link px-5 py-6 text-[11px] font-semibold uppercase tracking-wider text-white hover:text-aspada-gold transition-all duration-200"
      >
        Commercial
      </a>

      <a
        href="/blog"
        class="nav-link px-5 py-6 text-[11px] font-semibold uppercase tracking-wider text-white hover:text-aspada-gold transition-all duration-200"
      >
        News
      </a>
    </div>

    <!-- Social Links & Menu -->
    <div class="flex items-center gap-3 py-6">
      <div id="social-links" class="hidden lg:flex gap-4 text-white/60 transition-all duration-300">
        <a
          href={companyProfile?.companyInsta}
          class="social-icon i-lucide-instagram text-lg hover:text-aspada-gold transition-colors duration-200"
        ></a>
        <a
          href={companyProfile?.companyFacebook}
          class="social-icon i-lucide-facebook text-lg hover:text-aspada-gold transition-colors duration-200"
        ></a>
        <a
          href={companyProfile?.companyYoutube}
          class="social-icon i-lucide-youtube text-lg hover:text-aspada-gold transition-colors duration-200"
        ></a>
        {
          isAuthenticated ? (
            <a
              href="/admin"
              class="social-icon i-lucide-user text-lg hover:text-aspada-gold transition-colors duration-200"
            />
          ) : (
            <a
              href="/admin/login"
              class="social-icon i-lucide-log-in text-lg hover:text-aspada-gold transition-colors duration-200"
            />
          )
        }
      </div>
      <button
        id="mobile-menu-toggle"
        class="md:hidden relative z-50 text-white p-2 transition-all duration-300 hover:scale-110"
        aria-label="Toggle Menu"
      >
        <div class="i-lucide-menu text-2xl" id="menu-icon"></div>
      </button>
    </div>
  </div>

  <!-- Modern Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-40 bg-aspada-navy/95 backdrop-blur-2xl opacity-0 pointer-events-none transition-all duration-500 ease-in-out md:hidden flex flex-col"
  >
    <div class="flex-1 overflow-y-auto px-8 pt-32 pb-12">
      <div class="flex flex-col gap-10 max-w-md mx-auto">
        <!-- Main Links Group -->
        <div class="space-y-6">
          <a href="/" class="group block">
            <span
              class="text-4xl font-display font-bold text-white group-hover:text-aspada-gold transition-colors"
              >Home</span
            >
            <div class="h-0.5 w-0 group-hover:w-full bg-aspada-gold transition-all duration-300">
            </div>
          </a>
        </div>

        <!-- Offerings Grid -->
        <div class="space-y-6">
          <p class="text-[10px] uppercase tracking-[0.5em] text-aspada-gold/60 font-black">
            Our Offerings
          </p>
          <div class="grid grid-cols-1 gap-4">
            <a
              href="/projects/residential"
              class="group flex items-center justify-between bg-white/5 border border-white/10 p-5 rounded-2xl hover:bg-white/10 hover:border-aspada-gold/30 transition-all duration-300"
            >
              <div class="flex items-center gap-5">
                <div
                  class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center text-blue-400 group-hover:scale-110 transition-transform"
                >
                  <div class="i-lucide-home text-2xl"></div>
                </div>
                <div>
                  <span class="block font-bold text-white text-lg tracking-tight">Residential</span>
                  <span class="text-xs text-white/40 uppercase tracking-widest font-medium"
                    >Premium Living</span
                  >
                </div>
              </div>
              <div
                class="i-lucide-arrow-right text-white/20 group-hover:translate-x-2 transition-transform"
              >
              </div>
            </a>

            <a
              href="/projects/commercial"
              class="group flex items-center justify-between bg-white/5 border border-white/10 p-5 rounded-2xl hover:bg-white/10 hover:border-aspada-gold/30 transition-all duration-300"
            >
              <div class="flex items-center gap-5">
                <div
                  class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center text-purple-400 group-hover:scale-110 transition-transform"
                >
                  <div class="i-lucide-building-2 text-2xl"></div>
                </div>
                <div>
                  <span class="block font-bold text-white text-lg tracking-tight">Commercial</span>
                  <span class="text-xs text-white/40 uppercase tracking-widest font-medium"
                    >Business Spaces</span
                  >
                </div>
              </div>
              <div
                class="i-lucide-arrow-right text-white/20 group-hover:translate-x-2 transition-transform"
              >
              </div>
            </a>

            <a
              href="/projects/plots"
              class="group flex items-center justify-between bg-white/5 border border-white/10 p-5 rounded-2xl hover:bg-white/10 hover:border-aspada-gold/30 transition-all duration-300"
            >
              <div class="flex items-center gap-5">
                <div
                  class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center text-emerald-400 group-hover:scale-110 transition-transform"
                >
                  <div class="i-lucide-map text-2xl"></div>
                </div>
                <div>
                  <span class="block font-bold text-white text-lg tracking-tight">Layouts</span>
                  <span class="text-xs text-white/40 uppercase tracking-widest font-medium"
                    >Land & Plots</span
                  >
                </div>
              </div>
              <div
                class="i-lucide-arrow-right text-white/20 group-hover:translate-x-2 transition-transform"
              >
              </div>
            </a>

            <a
              href="/blog"
              class="group flex items-center justify-between bg-white/5 border border-white/10 p-5 rounded-2xl hover:bg-white/10 hover:border-aspada-gold/30 transition-all duration-300"
            >
              <div class="flex items-center gap-5">
                <div
                  class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center text-amber-400 group-hover:scale-110 transition-transform"
                >
                  <div class="i-lucide-newspaper text-2xl"></div>
                </div>
                <div>
                  <span class="block font-bold text-white text-lg tracking-tight">Latest News</span>
                  <span class="text-xs text-white/40 uppercase tracking-widest font-medium"
                    >Updates & Blog</span
                  >
                </div>
              </div>
              <div
                class="i-lucide-arrow-right text-white/20 group-hover:translate-x-2 transition-transform"
              >
              </div>
            </a>
          </div>
        </div>

        <!-- Mobile Footer -->
        <div class="pt-8 border-t border-white/10 flex flex-col items-center gap-6">
          <div class="flex gap-8 text-white/40">
            <a href={companyProfile?.companyInsta} class="hover:text-aspada-gold transition-colors"
              ><div class="i-lucide-instagram text-2xl"></div></a
            >
            <a
              href={companyProfile?.companyFacebook}
              class="hover:text-aspada-gold transition-colors"
              ><div class="i-lucide-facebook text-2xl"></div></a
            >
            <a
              href={companyProfile?.companyYoutube}
              class="hover:text-aspada-gold transition-colors"
              ><div class="i-lucide-youtube text-2xl"></div></a
            >
          </div>
          <p class="text-[9px] uppercase tracking-[0.3em] text-white/20 font-medium">
            Â© {new Date().getFullYear()} Aspada Developers
          </p>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  function initNav() {
    const toggle = document.getElementById('mobile-menu-toggle')
    const menu = document.getElementById('mobile-menu')
    const icon = document.getElementById('menu-icon')
    const navbarContainer = document.getElementById('navbar-container')
    const logoShield = document.getElementById('logo-shield')

    // Mobile menu toggle logic
    if (toggle && menu && icon) {
      toggle.addEventListener('click', () => {
        const isOpen = menu.classList.contains('opacity-100')
        if (isOpen) {
          // Close menu
          menu.classList.replace('opacity-100', 'opacity-0')
          menu.style.pointerEvents = 'none'
          icon.classList.replace('i-lucide-x', 'i-lucide-menu')
          document.body.style.overflow = ''
        } else {
          // Open menu
          menu.classList.replace('opacity-0', 'opacity-100')
          menu.style.pointerEvents = 'auto'
          icon.classList.replace('i-lucide-menu', 'i-lucide-x')
          document.body.style.overflow = 'hidden'
        }
      })
    }

    // Scroll behavior for navbar - SBR inspired
    let isScrolled = false

    function handleScroll() {
      const currentScroll = window.pageYOffset || document.documentElement.scrollTop

      if (currentScroll > 50 && !isScrolled) {
        // Scrolled state - semi-opaque white background
        isScrolled = true

        // Container styling - white background with muted text
        navbarContainer?.classList.remove('bg-aspada-navy/20', 'backdrop-blur-sm', 'border-white/5')
        navbarContainer?.classList.add(
          'bg-white/95',
          'backdrop-blur-md',
          'border-aspada-steel/10',
          'shadow-lg'
        )

        // Logo Shield styling on scroll - ensure it stays distinct
        logoShield?.classList.remove('bg-white/95', 'shadow-[0_20px_50px_rgba(22,42,71,0.15)]')
        logoShield?.classList.add('bg-white', 'shadow-2xl', 'border-aspada-steel/10')

        // Navigation links - muted steel/gray text
        const allNavLinks = document.querySelectorAll('.nav-link')
        allNavLinks.forEach((link) => {
          link.classList.remove('text-white', 'hover:text-aspada-gold', 'hover:bg-white/5')
          link.classList.add(
            'text-aspada-steel/80',
            'hover:text-aspada-gold',
            'hover:bg-aspada-steel/5',
            'hover:border-aspada-gold',
            'hover:border-b-1'
          )
        })

        // Social icons - muted steel color
        const allSocialIcons = document.querySelectorAll('.social-icon')
        allSocialIcons.forEach((icon) => {
          icon.classList.remove('text-white/60')
          icon.classList.add('text-aspada-steel/60')
        })

        // Mobile menu toggle - steel text
        toggle?.classList.remove('text-white')
        toggle?.classList.add('text-aspada-steel')
      } else if (currentScroll <= 50 && isScrolled) {
        // Top of page - semi-transparent dark
        isScrolled = false

        // Container styling - transparent dark
        navbarContainer?.classList.add('bg-aspada-navy/20', 'backdrop-blur-sm', 'border-white/5')
        navbarContainer?.classList.remove(
          'bg-white/95',
          'backdrop-blur-md',
          'border-aspada-steel/10',
          'shadow-lg'
        )

        // Logo Shield reset
        logoShield?.classList.add('bg-white/95', 'shadow-[0_20px_50px_rgba(22,42,71,0.15)]')
        logoShield?.classList.remove('bg-white', 'shadow-2xl', 'border-aspada-steel/10')

        // Navigation links - white text
        const allNavLinks = document.querySelectorAll('.nav-link')
        allNavLinks.forEach((link) => {
          link.classList.add('text-white', 'hover:text-aspada-gold', 'hover:bg-white/5')
          link.classList.remove(
            'text-aspada-steel/80',
            'hover:text-aspada-gold',
            'hover:bg-aspada-steel/5',
            'hover:border-aspada-gold',
            'hover:border-b-1'
          )
        })

        // Social icons - white color
        const allSocialIcons = document.querySelectorAll('.social-icon')
        allSocialIcons.forEach((icon) => {
          icon.classList.add('text-white/60', 'hover:text-aspada-gold')
          icon.classList.remove('text-aspada-steel/60', 'hover:text-aspada-gold')
        })

        // Mobile menu toggle - white text
        toggle?.classList.add('text-white')
        toggle?.classList.remove('text-aspada-steel')
      }
    }

    // Listen for scroll events
    window.addEventListener('scroll', handleScroll, { passive: true })

    // Initial check
    handleScroll()
  }

  // Initialize on load
  initNav()
  // Re-init if using Astro View Transitions
  document.addEventListener('astro:after-swap', initNav)
</script>
