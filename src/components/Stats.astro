<section class="relative py-32 px-6 overflow-hidden">
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[radial-gradient(circle_at_center,_var(--un-gradient-stops))] from-aspada-steel/20 via-transparent to-transparent"
  >
  </div>

  <div
    class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-12 relative z-10"
  >
    {
      [
        {
          label: "Families Impacted",
          val: "1700+",
          sub: "Trust built over a decade",
        },
        {
          label: "Square Feet Built",
          val: "3.5M",
          sub: "Precision in every inch",
        },
        { label: "Ongoing Projects", val: "04", sub: "Innovation in progress" },
        { label: "Awards Won", val: "12", sub: "Excellence recognized" },
      ].map((item) => (
        <div class="flex flex-col items-center md:items-start group">
          <span class="text-6xl font-display font-black text-white/10 group-hover:text-aspada-gold/20 transition-all duration-700 absolute -mt-8">
            {item.val}
          </span>
          <h3 class="text-4xl font-display font-bold text-aspada-gold mt-2">
            {item.val}
          </h3>
          <p class="text-aspada-cream font-bold text-xs uppercase tracking-widest mt-1">
            {item.label}
          </p>
          <p class="text-aspada-silver/50 text-[10px] mt-2">{item.sub}</p>
        </div>
      ))
    }
  </div>
</section>
