---
import AspadaForm from "./AspadaForm.svelte";
import LeafMap from "./LeafMap.svelte";

const { latitude, longitude } = Astro.props;
---

<section id="contact" class="py-24 px-6 relative overflow-y">
  <div
    class="absolute -bottom-10 -right-3 text-[15rem] font-black text-aspada-steel/50 select-none pointer-events-none blur-md"
  >
    SHIMOGA
  </div>

  <div class="max-w-7xl mx-auto px-4">
    <div
      class="glass-card rounded-[2.5rem] overflow-hidden shadow-2xl border border-white/20 relative group"
    >
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-aspada-gold/10 rounded-full blur-3xl pointer-events-none"
      >
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2">
        <div
          class="relative min-h-[500px] lg:h-full overflow-hidden border-b lg:border-b-0 lg:border-r border-white/10"
        >
          <h2 class="text-3xl font-bold text-aspada-navy mb-2">Visit Us</h2>
          <p class="text-slate-500 mb-8 text-sm">At out office</p>
          <div
            class="absolute inset-0 z-10 pointer-events-none group-hover:bg-transparent transition-all duration-700"
          >
          </div>

          <div
            class="absolute top-30 left-6 z-20 p-4 bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 opacity-0 group-hover:opacity-100 transition-opacity"
          >
            <span class="i-lucide-map-pin text-3xl text-aspada-gold"></span>
          </div>

          <LeafMap client:load latitude={latitude} longitude={longitude} />
        </div>

        <div
          class="p-8 lg:p-12 flex flex-col justify-center relative bg-white/5"
        >
          <div
            class="absolute top-6 right-6 opacity-5 group-hover:opacity-20 transition-opacity"
          >
            <span class="i-lucide-contact-2 text-7xl text-aspada-gold"></span>
          </div>

          <div class="relative z-10">
            <h2 class="text-3xl font-bold text-aspada-navy mb-2">
              Get in Touch
            </h2>
            <p class="text-slate-500 mb-8 text-sm">Drop us a message below.</p>

            <AspadaForm client:visible />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
