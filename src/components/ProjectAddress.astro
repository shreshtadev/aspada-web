---
import AspadaForm from './AspadaForm.svelte'
import LeafMap from './LeafMap.svelte'

const { latitude, longitude } = Astro.props
---

<section id="contact" class="py-24 px-6 relative overflow-y">
  <div
    class="absolute -bottom-10 -right-3 text-[12rem] md:text-[15rem] font-display font-extrabold text-aspada-steel/10 select-none pointer-events-none blur-sm"
  >
    SHIMOGA
  </div>

  <div class="max-w-7xl mx-auto px-4">
    <div
      class="glass-card rounded-[2.5rem] overflow-hidden shadow-2xl border border-white/20 relative group"
    >
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-aspada-gold/10 rounded-full blur-3xl pointer-events-none"
      >
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2">
        <div
          class="relative min-h-[400px] lg:h-full overflow-hidden border-b lg:border-b-0 lg:border-r border-white/10 p-10 lg:p-14 flex flex-col justify-end"
        >
          <div class="relative z-20">
            <h2
              class="text-3xl lg:text-4xl font-display font-extrabold text-white mb-3 tracking-tight"
            >
              Visit The Project
            </h2>
            <p class="text-white/70 mb-8 text-sm lg:text-base font-medium max-w-sm">
              Explore the location and surrounding amenities of this exceptional development.
            </p>

            <a
              href={`https://www.google.com/maps?q=${latitude},${longitude}`}
              target="_blank"
              class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-md border border-white/20 rounded-full text-white text-sm font-bold transition-all hover:gap-3"
            >
              Get Directions
              <span class="i-lucide-arrow-up-right text-xs"></span>
            </a>
          </div>

          <div
            class="absolute inset-0 z-10 bg-gradient-to-t from-aspada-navy/90 via-aspada-navy/20 to-transparent pointer-events-none"
          >
          </div>

          <LeafMap client:load latitude={latitude} longitude={longitude} />
        </div>

        <div class="p-10 lg:p-14 flex flex-col justify-center relative bg-white">
          <div
            class="absolute top-10 right-10 opacity-[0.03] group-hover:opacity-[0.08] transition-opacity pointer-events-none"
          >
            <span class="i-lucide-building-2 text-9xl text-aspada-navy"></span>
          </div>

          <div class="relative z-10">
            <div class="flex items-center gap-3 mb-4">
              <div
                class="w-10 h-10 rounded-full bg-aspada-gold/10 flex items-center justify-center text-aspada-gold"
              >
                <span class="i-lucide-help-circle text-lg"></span>
              </div>
              <h2
                class="text-3xl lg:text-4xl font-display font-extrabold text-aspada-navy tracking-tight"
              >
                Enquire Details
              </h2>
            </div>

            <p class="text-slate-500 mb-10 text-sm lg:text-base font-medium">
              Interested in this project? Submit your details and our representative will guide you
              through.
            </p>

            <AspadaForm client:visible isModal={true} />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
