---
import { Image } from 'astro:assets'
import layout from '../assets/layout.png'
import commercial from '../assets/commercial.png'
import residential from '../assets/residential.png'

type Category = {
  title: string
  description: string
  href: string
  image?: ImageMetadata // optional background image
}

const categories: Category[] = [
  {
    title: 'Layouts',
    description: 'Residential layouts & plotted developments',
    href: '/projects/plots',
    image: layout,
  },
  {
    title: 'Residential',
    description: 'Apartments, villas & gated communities',
    href: '/projects/residential',
    image: residential,
  },
  {
    title: 'Commercial',
    description: 'Retail, office & mixed-use projects',
    href: '/projects/commercial',
    image: commercial,
  },
]
---

<section class="px-6 py-20">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {
        categories.map((item) => (
          <a
            href={item.href}
            class="group relative flex min-h-[550px]
                 border border-aspada-steel/10 rounded rounded-md
                 bg-white
                 transition-all duration-500
                 hover:shadow-2xl hover:-translate-y-2"
          >
            <div
              class="relative z-10 flex h-full w-full flex-col
                   justify-between p-2 text-aspada-steel"
            >
              <Image
                src={item.image}
                alt={item.title ?? 'Feature image'}
                class="w-full h-full object-contain"
                loading="lazy"
                decode="async"
              />

              <div class="space-y-8">
                <span class="text-aspada-gold text-md font-black uppercase tracking-tighter opacity-0 -translate-x-4 transition-all duration-500 group-hover:opacity-100 group-hover:translate-x-0 ">
                  Premium Collection
                </span>
                <h3 class="text-4xl font-black uppercase tracking-tighter leading-[0.9]">
                  {item.title}
                </h3>
                <p class="text-lg text-aspada-steel/70 max-w-sm font-light leading-relaxed transition-all duration-500 group-hover:text-aspada-navy">
                  {item.description}
                </p>

                <div class="mt-8 flex items-center gap-3 text-sm font-bold uppercase tracking-widest text-aspada-gold">
                  <span class="h-[1px] w-8 bg-aspada-gold transition-all duration-500 group-hover:w-16" />
                  Explore projects
                  <div class="flex h-8 w-8 items-center justify-center rounded-full border border-aspada-gold/30 group-hover:bg-aspada-gold group-hover:text-aspada-navy transition-all duration-500">
                    <span class="i-lucide-arrow-right text-lg" />
                  </div>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
