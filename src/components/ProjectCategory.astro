---
type Category = {
  title: string;
  description: string;
  href: string;
  icon: "map" | "home" | "building-2";
  image?: string; // optional background image
};

const categories: Category[] = [
  {
    title: "Layouts",
    description: "Residential layouts & plotted developments",
    href: "/projects/plots",
    icon: "map",
  },
  {
    title: "Residential",
    description: "Apartments, villas & gated communities",
    href: "/projects/residential",
    icon: "home",
  },
  {
    title: "Commercial",
    description: "Retail, office & mixed-use projects",
    href: "/projects/commercial",
    icon: "building-2",
  },
];
---

<section class="px-6 py-20">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {
        categories.map((item) => (
          <a
            href={item.href}
            class="group relative flex min-h-[550px] overflow-hidden rounded-[2.5rem]
                 border border-aspada-steel/10 bg-aspada-navy
                 transition-all duration-500
                 hover:shadow-2xl hover:-translate-y-2"
          >
            <div
              class="absolute inset-0 bg-gradient-to-t
                   from-aspada-navy via-aspada-navy/40 to-transparent opacity-90 group-hover:opacity-80 transition-opacity"
            />

            <div
              class="relative z-10 flex h-full w-full flex-col
                   justify-between p-10 text-white"
            >
              <div class="flex flex-1 items-center justify-center">
                <div
                  class="inline-flex h-48 w-48 items-center justify-center
                       rounded-[2rem] bg-white/10 backdrop-blur-xl
                       border border-white/20 transition-all duration-700
                       group-hover:bg-transparent group-hover:border-aspada-silver/20 group-hover:rotate-[10deg] text-3xl"
                >
                  <span class={`i-lucide-${item.icon}`} />
                </div>
              </div>

              <div class="space-y-4">
                <span class="text-aspada-gold text-xs font-black uppercase tracking-[0.3em] opacity-0 -translate-x-4 transition-all duration-500 group-hover:opacity-100 group-hover:translate-x-0">
                  Premium Collection
                </span>
                <h3 class="text-4xl font-black uppercase tracking-tighter leading-[0.9]">
                  {item.title}
                </h3>
                <p class="text-lg text-white/70 max-w-sm font-light leading-relaxed transition-all duration-500 group-hover:text-white">
                  {item.description}
                </p>

                <div class="mt-8 flex items-center gap-3 text-sm font-bold uppercase tracking-widest text-aspada-gold">
                  <span class="h-[1px] w-8 bg-aspada-gold transition-all duration-500 group-hover:w-16" />
                  Explore projects
                  <div class="flex h-8 w-8 items-center justify-center rounded-full border border-aspada-gold/30 group-hover:bg-aspada-gold group-hover:text-aspada-navy transition-all duration-500">
                    <span class="i-lucide-arrow-right text-lg" />
                  </div>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
