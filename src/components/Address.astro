---
import StaticMap from "./StaticMap.astro";
import AspadaMap from "../assets/headquarters.webp";
---

<section id="contact" class="py-24 px-6 relative overflow-y">
  <div
    class="absolute -bottom-10 -right-3 text-[15rem] font-black text-aspada-steel/50 select-none pointer-events-none blur-md"
  >
    SHIMOGA
  </div>

  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-3 gap-8">
      <div
        class="lg:col-span-1 glass-card p-10 flex flex-col justify-between border-aspada-gold/20 relative group"
      >
        <div
          class="absolute top-0 right-0 p-6 opacity-10 group-hover:opacity-100 transition-opacity"
        >
          <span class="i-lucide-map-pin text-6xl text-aspada-gold"></span>
        </div>

        <div>
          <span
            class="text-aspada-gold text-[10px] uppercase tracking-[0.3em] font-bold"
            >Headquarters</span
          >
          <h2
            class="text-4xl font-display font-bold text-aspada-steel mt-2 mb-2"
          >
            Visit our <br />Experience Center
          </h2>

          <div class="space-y-8">
            <div class="flex gap-4">
              <div
                class="w-10 h-10 rounded-full flex-center bg-aspada-silver/50 shrink-0"
              >
                <span class="i-lucide-map-pin text-aspada-gold"></span>
              </div>
              <div>
                <p class="text-aspada-steel font-bold mb-1">Office Address</p>
                <address
                  class="text-aspada-steel text-sm leading-relaxed not-italic"
                >
                  4th Floor, Rushyashrunga Arcade,<br />
                  Kuvempu Road, Shivamogga,<br />
                  Karnataka - 577202
                </address>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="w-10 h-10 rounded-full bg-aspada-silver/50 flex-center shrink-0"
              >
                <span class="i-lucide-clock text-aspada-gold"></span>
              </div>
              <div>
                <p class="text-aspada-steel font-bold mb-1">Business Hours</p>
                <p class="text-aspada-steel text-sm">
                  Mon - Sat: 9:30 AM - 7:30 PM
                </p>
              </div>
            </div>
          </div>
        </div>

        <a
          href="https://maps.app.goo.gl/ByMKK3ayuos1PQQt8"
          target="_blank"
          class="mt-12 inline-flex items-center gap-2 text-aspada-gold font-bold uppercase text-xs tracking-widest hover:gap-4 transition-all"
        >
          Get Directions <span class="i-lucide-arrow-right"></span>
        </a>
      </div>

      <div
        class="lg:col-span-2 relative aspect-[16/9] rounded-3xl overflow-hidden shadow-2xl group"
      >
        <div
          class="absolute inset-0 bg-aspada-navy/20 pointer-events-none group-hover:bg-transparent transition-all duration-700"
        >
        </div>

        <!-- <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15489.47892658427!2d75.56579376723198!3d13.936577409718494!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x658d7a6559caee19%3A0x60d08da8b6de27c!2sAspada%20Developers!5e0!3m2!1sen!2sin!4v1766912315963!5m2!1sen!2sin"
          title="Aspada Developers Location"
          class="absolute inset-0 w-full h-full"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe> -->
        <StaticMap
          image={AspadaMap}
          alt="Aspada Developers office location in Shivamogga"
          mapsUrl="https://www.google.com/maps/place/Aspada+Developers"
          aspect="16/9"
        />
      </div>
    </div>
  </div>
</section>
