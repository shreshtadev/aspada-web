---
const amenities = [
  {
    name: "Infinity Pool",
    icon: "i-lucide-waves",
    class: "col-span-1",
  },
  { name: "Fitness Center", icon: "i-lucide-dumbbell", class: "col-span-1" },
  { name: "Green Spaces", icon: "i-lucide-leaf", class: "col-span-1" },
  { name: "Kids Play Area", icon: "i-lucide-smile", class: "col-span-1" },
  { name: "EV Charging", icon: "i-lucide-zap", class: "col-span-1" },
  { name: "24/7 Security", icon: "i-lucide-shield-check", class: "col-span-1" },
];
---

<section class="py-10 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <span
        class="text-aspada-gold font-bold tracking-[0.3em] uppercase text-xs"
        >Exclusively for Residents</span
      >
      <h2
        class="text-4xl md:text-6xl font-display font-bold mt-4 text-aspada-steel"
      >
        World Class
        <span class="italic text-aspada-gold/70 font-light">Amenities</span>
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {
        amenities.map((item) => (
          <div
            class={`group relative overflow-hidden bg-white/80 backdrop-blur-sm border border-aspada-gold/20 rounded-3xl flex flex-col justify-end min-h-[220px] p-8 transition-all duration-700 cubic-bezier(0.4, 0, 0.2, 1) hover:shadow-2xl hover:shadow-aspada-gold/20 hover:-translate-y-2 ${item.class}`}
          >
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-aspada-gold/10 via-transparent to-transparent" />

            <div class="absolute -top-6 -right-6 w-24 h-24 bg-aspada-gold/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-1000" />

            <div class="relative z-10 transition-all duration-500 transform group-hover:-translate-y-2">
              <div
                class={`${item.icon} text-5xl text-aspada-gold mb-6 transition-all duration-500 [text-shadow:0_0_20px_rgba(212,175,55,0)] group-hover:[text-shadow:0_0_25px_rgba(212,175,55,0.4)]`}
              />
            </div>

            <div class="relative z-10">
              <h3 class="text-xl font-extrabold tracking-tight text-aspada-steel transition-all duration-500 group-hover:text-aspada-gold">
                {item.name}
              </h3>

              <div class="relative mt-3 h-[2px] w-12 bg-aspada-gold/30 overflow-hidden rounded-full">
                <div class="absolute inset-0 w-full h-full bg-aspada-gold -translate-x-full group-hover:translate-x-0 transition-transform duration-700 ease-in-out" />
              </div>
            </div>

            <div class="absolute inset-0 border border-white/0 group-hover:border-white/40 rounded-3xl transition-colors duration-700 pointer-events-none" />
          </div>
        ))
      }
    </div>
  </div>
</section>
