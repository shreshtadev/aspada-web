---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Stats from "../components/Stats.astro";
import Amenities from "../components/Amenities.astro";
import ActionDock from "../components/ActionDock.astro";
import Address from "../components/Address.astro";
import Testimonials from "../components/Testimonials.astro";
import Footer from "../components/Footer.astro";
import ProjectGallery from "../components/ProjectGallery.astro";
---

<Layout title="Aspada Developers | Shivamogga's Finest">
  <Navbar />

  <main>
    <Hero />

    <section class="py-20 px-6 bg-aspada-navy text-white">
      <div
        class="max-w-7xl mx-auto flex flex-col lg:flex-row gap-12 lg:gap-20 items-center"
      >
        <div class="flex-1 relative group w-full">
          <div
            class="absolute -inset-4 border-1 border-[#d4af37]/30 rounded-3xl translate-x-3 translate-y-3 -z-10"
          >
          </div>
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <img
              src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80"
              alt="Luxury Project"
              class="w-full h-auto grayscale transition-all duration-700 group-hover:grayscale-0 scale-105 group-hover:scale-100"
            />
          </div>
        </div>

        <div class="flex-1 space-y-8">
          <h2
            class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight"
          >
            Crafting Legacies, <br />
            <span class="text-[#d4af37]">Not Just Buildings.</span>
          </h2>

          <p class="text-gray-400 text-lg md:text-xl leading-relaxed max-w-2xl">
            From the meticulous planning of
            <span class="font-semibold text-gray-200"
              >Devagiri Residential Layout</span
            >
            to the architectural marvel of
            <span class="font-semibold text-gray-200">Rushyashrunga Arcade</span
            >, we don't just develop land; we curate experiences.
          </p>

          <button
            class="bg-[#d4af37] hover:bg-[#c4a030] text-[#1a1a1a] font-bold py-4 px-10 rounded-full transition-colors duration-300"
          >
            Download Brochure
          </button>
        </div>
      </div>
    </section>

    <ProjectGallery /><Stats />
    <Amenities />
    <Testimonials />

    <Address />
  </main>
  <Footer />
  <ActionDock />
</Layout>
