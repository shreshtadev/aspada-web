---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Stats from "../components/Stats.astro";
import Amenities from "../components/Amenities.astro";
import ActionDock from "../components/ActionDock.astro";
import Address from "../components/Address.astro";
import Testimonials from "../components/Testimonials.astro";
import Footer from "../components/Footer.astro";
import ProjectGallery from "../components/ProjectGallery.astro";
import landingbgmp from "../assets/Intro.mp4";
import landingbgwm from "../assets/output-854.webm";
const homePoster =
  "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80";
---

<Layout title="Aspada Developers | Shivamogga's Finest">
  <Navbar />

  <main>
    <Hero
      posterUrl={homePoster}
      videoMp4Url={landingbgmp}
      videoWebmUrl={landingbgwm}
    />

    <section class="py-20 px-6">
      <div
        class="max-w-7xl mx-auto flex flex-col lg:flex-row gap-12 lg:gap-20 items-center"
      >
        <div class="flex-1 relative group w-full">
          <div
            class="absolute -inset-4 border-1 border-aspada-cream/30 rounded-3xl translate-x-3 translate-y-3 -z-10"
          >
          </div>
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <img
              src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80"
              alt="Luxury Project"
              class="w-full h-auto grayscale transition-all duration-700 group-hover:grayscale-0 scale-105 group-hover:scale-100"
            />
          </div>
        </div>

        <div class="flex-1 space-y-8">
          <h2
            class="text-aspada-steel text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight"
          >
            Crafting Legacies, <br />
            <span class="text-aspada-gold italic font-light"
              >Not Just Buildings.</span
            >
          </h2>

          <p
            class="text-aspada-steel/60 text-lg md:text-xl leading-relaxed max-w-2xl"
          >
            Aspada Developers is a full service Real Estate firm, specializing
            in the sale, development of residential properties, project
            marketing and maintenance of complete projects, We have a team of
            professionals with decades of experience in the real estate
            industry. We are ready to help you find the property that best fits
            your needs, whether you&OpenCurlyQuote;re looking for a home or
            investment property. We are also open for Joint venture with Land
            Owners and Investors for layouts development.
          </p>
        </div>
      </div>
    </section>

    <ProjectGallery /><Stats />
    <Amenities />
    <Testimonials />

    <Address />
  </main>
  <Footer />
  <ActionDock />
</Layout>
