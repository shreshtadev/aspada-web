---
import AdminLayout from "../../layouts/AdminLayout.astro";
import ProjectList from "../../components/admin/ProjectList.svelte";
---

<AdminLayout>
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-aspada-steel uppercase tracking-tight">
      Projects <span class="text-aspada-gold">Inventory</span>
    </h1>
    <a
      href="/admin/projects/new"
      class="bg-aspada-gold text-white px-6 py-2 rounded-full font-bold hover:bg-aspada-navy transition-colors shadow-lg shadow-aspada-gold/20"
    >
      + New Project
    </a>
  </div>

  <ProjectList client:load />
</AdminLayout>
