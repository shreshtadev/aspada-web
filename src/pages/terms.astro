---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import pb from "../lib/pb";
import { Collections, type CompaniesResponse } from "../types/pocketbase-types";
const companyProfile: CompaniesResponse = await pb
  .collection(Collections.Companies)
  .getFirstListItem(
    "companyName = '" + import.meta.env.PUBLIC_COMPANY_NAME + "'"
  );
---

<Layout title={`Terms | ${companyProfile.companyName}`}>
  <Navbar companyProfile={companyProfile} />

  <main>
    <section class="bg-aspada-cream/50 min-h-screen py-20 px-6 sm:px-10">
      <div
        class="max-w-4xl mx-auto bg-white border border-aspada-gold/20 rounded-3xl shadow-xl overflow-hidden"
      >
        <div class="bg-aspada-steel p-10 text-center relative overflow-hidden">
          <div
            class="absolute -top-10 -right-10 w-40 h-40 bg-[#d4af37]/10 blur-3xl rounded-full"
          >
          </div>
          <h1
            class="text-4xl font-bold text-white relative z-10 uppercase tracking-widest"
          >
            Terms <span class="italic text-aspada-gold font-light">&amp;</span> Conditions
          </h1>
          <p class="text-slate-400 mt-2 text-sm relative z-10">
            Last updated: {`January ${new Date().getFullYear()}`}
          </p>
        </div>

        <div class="p-8 md:p-12 text-slate-700 leading-relaxed space-y-8">
          <p class="text-lg">
            Welcome to <span class="font-bold text-aspada-silver uppercase"
              >{companyProfile.companyName}</span
            >. By accessing our website, <a
              href="https://aspadadevelopers.com"
              class="text-aspada-gold hover:underline">aspadadevelopers.com</a
            >, you agree to be bound by these Terms and Conditions.
          </p>

          <hr class="border-aspada-gold/10" />

          <div>
            <h2
              class="text-xl font-bold text-slate-900 flex items-center gap-3 mb-4"
            >
              <span class="text-aspada-gold">01.</span> Acceptance of Terms
            </h2>
            <p>
              By visiting our Website, you acknowledge that you have read,
              understood, and agree to comply with these Terms and our Privacy
              Policy. If you do not agree, you must discontinue use immediately.
            </p>
          </div>

          <div
            class="bg-aspada-cream/50 p-6 rounded-2xl border border-aspada-gold/10"
          >
            <h2
              class="text-xl font-bold text-slate-900 flex items-center gap-3 mb-4"
            >
              <span class="text-aspada-gold">02.</span> User Conduct & Registration
            </h2>
            <ul class="space-y-3 list-none">
              <li class="flex gap-2">
                <span class="text-aspada-gold font-bold">•</span>
                <span
                  ><strong>Accuracy:</strong> Information provided must be accurate
                  and up-to-date.</span
                >
              </li>
              <li class="flex gap-2">
                <span class="text-aspada-gold font-bold">•</span>
                <span
                  ><strong>Confidentiality:</strong> You are responsible for account
                  login security and all activities under your account.</span
                >
              </li>
              <li class="flex gap-2">
                <span class="text-aspada-gold font-bold">•</span>
                <span
                  ><strong>Data Usage:</strong> You consent to promotional communications
                  (Email/SMS) subject to our Privacy Policy.</span
                >
              </li>
            </ul>
          </div>

          <div>
            <h2
              class="text-xl font-bold text-slate-900 flex items-center gap-3 mb-4"
            >
              <span class="text-[#d4af37]">03.</span> Prohibited Uses & Security
            </h2>
            <p class="mb-4">
              You are strictly prohibited from unauthorized access via automated
              tools ("scraping"), disrupting networks, or deploying malicious
              code. Such acts may be prosecuted under the <em
                class="text-slate-900 font-medium"
                >Information Technology Act, 2000</em
              >.
            </p>
          </div>

          <div>
            <h2
              class="text-xl font-bold text-slate-900 flex items-center gap-3 mb-4"
            >
              <span class="text-[#d4af37]">04.</span> Intellectual Property Rights
            </h2>
            <p>
              All content including text, graphics, logos, and designs is the
              exclusive property of <span class="font-bold"
                >ASPADA DEVELOPERS LLP</span
              >. No license is granted for use without prior written consent.
            </p>
          </div>

          <div
            class="border-l-4 border-[#d4af37] pl-6 py-2 italic text-slate-600"
          >
            <h2 class="text-lg font-bold text-slate-900 not-italic mb-2">
              Liability Disclaimer
            </h2>
            Your use of this Website is at your <span
              class="uppercase font-bold">sole risk</span
            >. Aspada Developers LLP shall not be liable for direct or indirect
            losses arising from the use of this site.
          </div>

          <div
            class="mt-12 pt-8 border-t border-slate-100 flex flex-col md:flex-row justify-between gap-6 text-sm"
          >
            <div>
              <h3 class="font-bold text-slate-900 mb-2">Governing Law</h3>
              <p>Jurisdiction: Shivamogga, Karnataka, India.</p>
            </div>
            <div>
              <h3 class="font-bold text-slate-900 mb-2">Contact Us</h3>
              <p>Email: {companyProfile.companyMainEmail}</p>
              <p>
                Address: <span class="block">{companyProfile.addressLine1}</span
                ><span class="block"
                  >{companyProfile.city}, {companyProfile.state}, {
                    companyProfile.pincode
                  }</span
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
