---
import Layout from '../../../layouts/Layout.astro'
import Navbar from '../../../components/Navbar.astro'
import Footer from '../../../components/Footer.astro'
import ActionDock from '../../../components/ActionDock.astro'
import SocialEmbed from '../../../components/SocialEmbed.svelte'
import pb from '../../../lib/pb'
// import { getLocationName } from "../../../lib/utils";
import { marked } from 'marked'
import toast from 'svelte-french-toast'
import {
  Collections,
  MetadataCategoryTypeOptions,
  type AttachmentsResponse,
  type CompaniesResponse,
  type MetadataResponse,
  type ProjectsResponse,
} from '../../../types/pocketbase-types'
import type { ProjectInfoExpand } from '../../../types'
import ProjectAddress from '../../../components/ProjectAddress.astro'
import ProjectEnquiryModal from '../../../components/ProjectEnquiryModal.svelte'
import GalleryLightbox from '../../../components/projects/GalleryLightbox.svelte'
import HorizontalScroller from '../../../components/HorizontalScroller.astro'

const { category, id } = Astro.params
if (!id || !category) {
  return Astro.redirect(`/projects/${category}`)
}

let project: ProjectsResponse<ProjectInfoExpand>
let galleryImages: any[] = []
let amenities: MetadataResponse[] = []
let specifications: MetadataResponse[] = []
let socials: any[] = []
let projectGallery: any[] = []
let brochureUrl = ''
let companyProfile: CompaniesResponse
// let fullAddress: Address;
try {
  const record = await pb
    .collection(Collections.Projects)
    .getOne<ProjectsResponse<ProjectInfoExpand>>(id, {
      expand: 'projectDetails,socials,coverImage,coverVideo,brochure',
    })

  // Process Cover Image
  const coverImageUrl = pb.files.getURL(
    record.expand?.coverImage,
    record.expand?.coverImage?.attachment,
    {
      quality: 90,
    }
  )

  const coverVideoUrl = pb.files.getURL(
    record.expand?.coverVideo,
    record.expand?.coverVideo?.attachment,
    {
      quality: 90,
    }
  )

  // Process Brochure
  if (record.expand?.brochure) {
    brochureUrl = pb.files.getURL(record.expand?.brochure, record.expand?.brochure?.attachment)
  }

  // Process Relations
  if (record.expand) {
    amenities =
      (await Promise.all(
        record.expand.projectDetails
          ?.filter((y) => y.categoryType === MetadataCategoryTypeOptions.amenity)
          .map(async (md: MetadataResponse) => {
            const iconAttachmentID = md.attachments[0] || ''
            if (iconAttachmentID !== '') {
              const iconAttachment: AttachmentsResponse = await pb
                .collection(Collections.Attachments)
                .getOne(iconAttachmentID)
              const iconAttachmentUrl = pb.files.getURL(iconAttachment, iconAttachment.attachment)
              md.attachments = [iconAttachmentUrl]
            }
            return md
          })
      )) || []
    specifications =
      record.expand.projectDetails?.filter(
        (y) => y.categoryType === MetadataCategoryTypeOptions.specification
      ) || []
    projectGallery =
      record.expand.projectDetails?.filter(
        (y) => y.categoryType === MetadataCategoryTypeOptions.gallery
      ) || []
    socials = record.expand.socials || []
    // Process Gallery Images (if any)
    const specAttachments = specifications.flatMap((spec) => spec.attachments || [])

    const projectGalleryAttachments = projectGallery.flatMap((pj) => pj.attachments || [])
    specAttachments.push(...projectGalleryAttachments)

    if (specAttachments?.length > 0) {
      const filterString = specAttachments.map((id) => `id="${id}"`).join(' || ')
      const galleryAttachments = await pb
        .collection('attachments')
        .getFullList({ filter: filterString })
      galleryImages = galleryAttachments?.map((attachment) => {
        const url = pb.files.getURL(attachment, attachment.attachment, {
          quality: 80,
          thumb: '1200x800',
        })
        return {
          url,
          title: attachment.title,
        }
      })
    }
  }
  // fullAddress =
  //   (await getLocationName(
  //     String(record.location.lat),
  //     String(record.location?.lon)
  //   )) || "";

  project = {
    expand: record.expand,
    id: record.id,
    collectionId: record.collectionId,
    collectionName: record.collectionName,
    title: record.title,
    slug: record.slug,
    category: record.category,
    coverImage: coverImageUrl,
    coverVideo: coverVideoUrl,
    location: record.location,
    addressLine1: record.addressLine1,
    city: record.city,
    state: record.state,
    district: record.district,
    pincode: record.pincode,
    brochure: brochureUrl,
    status: record.status,
    description: await marked.parse(record.description || ''),
    created: record.created,
    updated: record.updated,
    projectDetails: record.projectDetails,
    socials: record.socials,
  }
} catch (e) {
  console.error('Error fetching project:', e)
  toast.error('Error fetching project')
  return Astro.redirect('/404')
}

companyProfile = await pb
  .collection(Collections.Companies)
  .getFirstListItem("companyName = '" + import.meta.env.PUBLIC_COMPANY_NAME + "'")
---

<Layout title={`${project.title} | Aspada Developers`}>
  <Navbar companyProfile={companyProfile} />

  <main class="min-h-screen bg-aspada-cream/10">
    {/* Hero Section */}
    <div class="relative h-[60vh] sm:h-[70vh] w-full overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-b from-slate-900/60 via-slate-900/40 to-slate-900/90 z-10"
      >
      </div>
      {
        project.coverVideo ? (
          <video
            autoplay
            muted
            loop
            playsinline
            class="absolute inset-0 w-full h-full object-cover"
          >
            <source src={project.coverVideo} />
          </video>
        ) : (
          <img
            src={project.coverImage}
            alt={project.title}
            class="absolute inset-0 w-full h-full object-cover"
          />
        )
      }
      <div
        class="absolute inset-0 z-20 flex flex-col justify-end pb-12 px-4 sm:pb-20 sm:px-12 max-w-7xl mx-auto w-full"
      >
        <div class="space-y-4 animate-in slide-in-from-bottom-10 fade-in duration-700">
          <div class="flex items-center gap-3">
            <span
              class="px-4 py-1.5 rounded-full bg-[#d4af37] text-white font-bold text-xs tracking-widest uppercase"
            >
              {project.category}
            </span>
            <span
              class={`px-4 py-1.5 rounded-full font-bold text-xs tracking-widest uppercase backdrop-blur-md ${
                project.status === 'completed'
                  ? 'bg-green-500/20 text-green-400 border border-green-500/30'
                  : 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30'
              }`}
            >
              {project.status}
            </span>
          </div>

          <h1
            class="text-3xl sm:text-5xl md:text-7xl font-bold text-white tracking-tight drop-shadow-2xl"
          >
            {project.title}
          </h1>

          {
            (project.addressLine1 || project.city || project.district) && (
              <div class="flex items-center gap-2 text-slate-300 text-lg">
                <span class="i-lucide-map-pin text-[#d4af37]" />
                <span>
                  {project.addressLine1 || ''}, {project.city || ''}, {project.district || ''}
                </span>
              </div>
            )
          }
        </div>
      </div>
    </div>

    {/* Action Bar */}
    <div class="sticky top-24 z-30 bg-white/80 backdrop-blur-xl border-b border-slate-200">
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 py-4 flex flex-wrap justify-between items-center gap-4"
      >
        <div
          class="flex gap-4 sm:gap-6 text-sm font-semibold text-aspada-navy overflow-x-auto no-scrollbar whitespace-nowrap mask-linear-fade pb-1 sm:pb-0 w-full sm:w-auto"
        >
          <a href="#overview" class="hover:text-aspada-gold transition-colors">Overview</a>
          {
            amenities.length > 0 && (
              <a href="#amenities" class="hover:text-aspada-gold transition-colors">
                Amenities
              </a>
            )
          }
          {
            specifications.length > 0 && (
              <a href="#specifications" class="hover:text-aspada-gold transition-colors">
                Specifications
              </a>
            )
          }
          {
            galleryImages.length > 0 && (
              <a href="#gallery" class="hover:text-aspada-steel transition-colors">
                Gallery
              </a>
            )
          }
        </div>

        <div class="flex gap-3">
          {
            brochureUrl && (
              <a
                href={brochureUrl}
                target="_blank"
                class="px-4 py-2 text-sm font-bold text-slate-700 hover:text-[#d4af37] border border-slate-300 rounded-lg hover:bg-slate-50 transition-all flex items-center gap-2"
              >
                <span class="i-lucide-download" />
                Download Brochure
              </a>
            )
          }
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 sm:gap-16">
        {/* Main Content */}
        <div class="col-span-2 space-y-24">
          {/* Specifications */}
          {
            specifications.length > 0 && specifications.every((item) => item.showInTiles) && (
              <section id="specifications" class="scroll-mt-42">
                <h2 class="text-3xl font-bold text-aspada-navy mb-8 flex items-center gap-3">
                  <span class="w-8 h-1 bg-aspada-navy" />
                  Specifications
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-2 border-2 border-aspada-navy rounded-2xl p-4">
                  {specifications
                    .filter((item) => item.showInTiles)
                    .map((item) => (
                      <div class="p-4 rounded-2xl flex flex-col">
                        <div class="flex-1">
                          <p class="text-aspada-navy font-semibold text-md leading-6 mb-4">
                            {item.title}
                          </p>
                          <span class="text-aspada-steel text-xs leading-6 mb-4">
                            {item.summary}
                          </span>
                        </div>
                      </div>
                    ))}
                </div>
              </section>
            )
          }

          {/* Overview */}
          <section id="overview" class="scroll-mt-42">
            <h2 class="text-3xl font-bold text-slate-800 mb-8 flex items-center gap-3">
              <span class="w-8 h-1 bg-aspada-steel"></span>
              Project Overview
            </h2>
            <div
              class="prose prose-lg prose-slate max-w-none prose-headings:font-bold prose-headings:text-slate-800 prose-p:text-slate-600 prose-li:text-slate-600"
              set:html={project.description}
            />
          </section>

          {/* Amenities */}
          {
            amenities.length > 0 && (
              <section id="amenities" class="scroll-mt-42">
                <h2 class="text-3xl font-bold text-slate-800 mb-8 flex items-center gap-3">
                  <span class="w-8 h-1 bg-aspada-steel" />
                  Premium Amenities
                </h2>
                <HorizontalScroller>
                  {amenities.map((item) => (
                    <div class="group p-6 rounded-3xl bg-white transition-all shrink-0 w-[200px] snap-start flex flex-col items-center text-center">
                      <div class="w-24 h-24 rounded-2xl bg-aspada-cream/30 flex items-center justify-center text-aspada-steel mb-4 group-hover:scale-110 transition-transform">
                        {item.attachments[0] ? (
                          <img
                            src={item.attachments[0]}
                            alt={item.title}
                            class="w-20 h-20 object-contain"
                          />
                        ) : (
                          <span class="i-lucide-check text-2xl" />
                        )}
                      </div>
                      <h3 class="font-bold text-aspada-navy group-hover:text-aspada-gold transition-colors text-sm">
                        {item.title}
                      </h3>
                    </div>
                  ))}
                </HorizontalScroller>
              </section>
            )
          }

          {/* Gallery */}
          {
            galleryImages.length > 0 && (
              <section id="gallery" class="scroll-mt-42">
                <h2 class="text-3xl font-bold text-slate-800 mb-8 flex items-center gap-3">
                  <span class="w-8 h-1 bg-aspada-steel" />
                  Gallery
                </h2>
                <GalleryLightbox
                  client:load
                  images={galleryImages}
                  projectTitle={project.title}
                  layout="scroll"
                />
              </section>
            )
          }
        </div>

        {/* Sidebar */}
        <div class="space-y-8">
          {/* Quick Info Card */}
          <div class="bg-white p-8 rounded-3xl shadow-xl border border-slate-100 top-32">
            <div class="pb-6 mb-6 border-b border-slate-100">
              <h3 class="text-xl font-bold text-slate-800">At a Glance</h3>
            </div>

            <div class="space-y-6">
              <div class="flex items-center gap-4">
                <div
                  class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-500"
                >
                  <span class="i-lucide-home"></span>
                </div>
                <div>
                  <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Type</p>
                  <p class="font-semibold text-slate-800 uppercase">
                    {project.category}
                  </p>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div
                  class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-500"
                >
                  <span class="i-lucide-activity"></span>
                </div>
                <div>
                  <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Status</p>
                  <p class="font-semibold text-slate-800 uppercase">
                    {project.status}
                  </p>
                </div>
              </div>
            </div>
            <ProjectEnquiryModal
              client:load
              projectTitle={project.title}
              latitude={project.location?.lat}
              longitude={project.location?.lon}
            />
          </div>

          {/* Socials Media Embeds */}
          {
            socials.length > 0 && (
              <div class="sticky top-32 space-y-6">
                <h3 class="font-bold text-aspada-steel px-2">Social Updates</h3>
                <div class="max-h-[600px] overflow-y-auto pr-2 custom-scrollbar space-y-4">
                  {socials
                    .sort((a, b) => b.updated - a.updated)
                    .map((social, index) => (
                      <SocialEmbed
                        client:visible
                        index={index}
                        title={social.title}
                        shareUrl={social.shareUrl}
                        shareUrlType={social.shareUrlType}
                      />
                    ))}
                </div>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </main>

  <Footer companyProfile={companyProfile} />
  <ActionDock companyProfile={companyProfile} />
</Layout>
